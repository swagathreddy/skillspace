{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "./mvnw clean package -DskipTests"
    },
    "deploy": {
      "startCommand": "java -jar target/*.jar",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }